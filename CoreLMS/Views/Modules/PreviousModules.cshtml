@model IEnumerable<CoreLMS.Core.Models.Module>

@{
    ViewData["Title"] = "Previous Modules";
}

<h3>Previous Modules</h3>

@if (Model.Count() == 0)
{

    <p class="text-warning"><strong>No Modules to this course..</strong></p>

}
else
{
    <p>CourseName : @ViewBag.CourseName</p>
}

<p>
    <a asp-action="Index">back to Modules Index</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ModuleName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ModuleName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Course.CourseName)
                </td>
                <td>
                    <a asp-controller="Activities" asp-action="PreviousActivities" asp-route-id="@item.ModuleId">Previous Activities</a>

                </td>
            </tr>
        }
    </tbody>
</table>
