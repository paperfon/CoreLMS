@model CoreLMS.Core.ViewModels.UploadFile


@{
    ViewBag.Title = "Upload File";
}

<h1>Upload</h1>

<h4>Document</h4>
<hr />

<form enctype="multipart/form-data" asp-controller="Documents" asp-action="create"
      method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="DocumentName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="DocumentName" class="form-control" placeholder="Name">
            <span asp-validation-for="DocumentName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="TypeOfDocument" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="TypeOfDocument" class="form-control" asp-items="ViewBag.typeOfDoclist">
                <option value="" hidden disabled selected>Select TypeOfDocument</option>
            </select>
        </div>
    </div>
    @*<div class="form-group row">
            <label asp-for="LMSEntity" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <select asp-for="LMSEntity" class="form-control" asp-items="ViewBag.lmsentitylist">
                    <option value="" hidden disabled selected>Select An Entity</option>
                </select>
            </div>
        </div>*@
    <div class="form-group row">
        <label asp-for="File" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <div class="custom-file">
                <input asp-for="File" class="form-control custom-file-input">
                <label class="custom-file-label">Choose File...</label>
            </div>
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Upload File</button>
        </div>
    </div>


</form>